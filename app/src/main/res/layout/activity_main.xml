<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devehab.tasbeehcounter.MainActivity"
    android:background="@drawable/bg">


    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:foregroundGravity="top" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_v"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="45dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="center"
            android:gravity="center"
            />

        <TextView
            android:layout_width="234dp"
            android:layout_height="55dp"
            android:text="0"
            android:id="@+id/textAd"
            android:background="@drawable/bg_connt"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:editable="false"
            android:layout_weight="0.80" />

        <ImageButton
            android:layout_width="237dp"
            android:layout_height="250dp"
            android:id="@+id/CounntAdd"
            android:background="@drawable/botton_add"
            android:foregroundGravity="center"
            android:layout_below="@+id/textAd"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CounntAdd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restz"
                android:background="@drawable/botton_rest"
                android:foregroundGravity="center"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addvibrator"
                android:background="@drawable/vibrate_on"
                android:foregroundGravity="center"
                android:layout_marginLeft="10dp"
                android:nestedScrollingEnabled="false" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
